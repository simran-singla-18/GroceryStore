<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
           android:layout_marginRight="10dp"
        android:outlineSpotShadowColor="#C4FFFFFF"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="fitXY">
             </ImageView>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/image"/>
            <TextView
                android:id="@+id/smalltext"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#C4000000"
                android:padding="5dp"
                android:layout_below="@+id/text"/>
            <TextView
                android:id="@+id/quantext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Priceg"
                android:textColor="#C4000000"
                android:padding="5dp"
                android:layout_marginLeft="1dp"
                android:layout_below="@+id/text"
                android:layout_toRightOf="@+id/smalltext"/>
            <TextView
                android:id="@+id/pricetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="$4.99"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/smalltext"/>
            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:background="@drawable/ic_add"
                app:backgroundTint="#1CD958"
                android:layout_below="@id/smalltext"
                android:visibility="visible"
                android:layout_toRightOf="@+id/pricetext"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>